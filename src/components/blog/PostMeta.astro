---
// =============================================================================
// Post Meta Component - Displays post metadata
// =============================================================================

import { formatDate, formatReadingTime } from '@/lib/utils';
import type { Locale } from '@/config';

interface Props {
  publishedAt: Date;
  updatedAt?: Date;
  readingTime: number;
  locale: Locale;
  tags?: string[];
  showTags?: boolean;
}

const {
  publishedAt,
  updatedAt,
  readingTime,
  locale,
  tags = [],
  showTags = false,
} = Astro.props;
---

<div class="flex flex-wrap items-center gap-4 text-sm text-base-content/60">
  <!-- Published date -->
  <div class="flex items-center gap-1.5">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-4 w-4"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
      ></path>
    </svg>
    <time datetime={publishedAt.toISOString()}>
      {formatDate(publishedAt, locale)}
    </time>
  </div>

  <!-- Updated date (if different from published) -->
  {
    updatedAt && updatedAt.getTime() !== publishedAt.getTime() && (
      <div class="flex items-center gap-1.5">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
          />
        </svg>
        <span>
          {locale === 'pt' ? 'Atualizado em' : 'Updated on'}{' '}
          <time datetime={updatedAt.toISOString()}>{formatDate(updatedAt, locale)}</time>
        </span>
      </div>
    )
  }

  <!-- Reading time -->
  <div class="flex items-center gap-1.5">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-4 w-4"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span>{formatReadingTime(readingTime, locale)}</span>
  </div>

  <!-- Tags (optional) -->
  {
    showTags && tags.length > 0 && (
      <div class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
          />
        </svg>
        <div class="flex flex-wrap gap-1">
          {tags.slice(0, 3).map((tag) => (
            <a href={`/tags/${tag}`} class="hover:text-primary transition-colors">
              #{tag}
            </a>
          ))}
          {tags.length > 3 && <span>+{tags.length - 3}</span>}
        </div>
      </div>
    )
  }
</div>
