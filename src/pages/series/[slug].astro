---
// =============================================================================
// Series Detail Page - Redirects to default locale
// =============================================================================

import SilentRedirect from '@/layouts/SilentRedirect.astro';
import { getAllSeries } from '@/lib/posts';

export async function getStaticPaths() {
  const seriesSlugs = await getAllSeries();

  return seriesSlugs.map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
---

<SilentRedirect to={`/pt/series/${slug}`} />
